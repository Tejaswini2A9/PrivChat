<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PrivChat - Register</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            background: linear-gradient(135deg, #0f172a, #1e293b, #0f172a);
            overflow: hidden;
            color: #e0e0e0;
        }

        .register-section {
            width: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 60px 80px;
            background: #f8f9fa;
            position: relative;
        }

        .typewriter-section {
            width: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #6e7aeb, #f9715f);
            position: relative;
            overflow: hidden;
        }

        .register-container {
            width: 100%;
            max-width: 400px;
            /* No card styling needed, handled by section padding */
        }

        .register-header {
            margin-bottom: 40px;
        }

        .register-title {
            font-size: 2.25rem;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 8px;
            letter-spacing: -0.5px;
        }

        .register-subtitle {
            font-size: 1rem;
            color: #6b7280;
            line-height: 1.5;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-label {
            display: block;
            font-size: 0.95rem;
            font-weight: 500;
            color: #374151;
            margin-bottom: 8px;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            font-size: 0.95rem;
            border: 1.5px solid #d1d5db;
            border-radius: 8px;
            background: #ffffff;
            color: #1f2937;
            transition: all 0.2s ease;
            font-family: inherit;
        }

        .form-control:focus {
            outline: none;
            border-color: #F2295B;
            box-shadow: 0 0 0 3px rgba(242, 41, 91, 0.1);
        }

        .form-control::placeholder {
            color: #9ca3af;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            justify-content: space-between; /* To space out if there were multiple elements */
            margin-bottom: 32px;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox {
            appearance: none;
            width: 18px;
            height: 18px;
            border: 2px solid #d1d5db;
            border-radius: 4px;
            background: #ffffff;
            cursor: pointer;
            position: relative;
            transition: all 0.2s ease;
        }

        .checkbox:checked {
            background: #F2295B;
            border-color: #F2295B;
        }

        .checkbox:checked::after {
            content: 'âœ“';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 12px;
            font-weight: bold;
        }

        .checkbox-label {
            font-size: 0.95rem;
            color: #374151;
            cursor: pointer;
            user-select: none;
        }

        .register-btn {
            width: 100%;
            padding: 14px 24px;
            background: #F2295B;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            font-family: inherit;
            letter-spacing: 0.025em;
            margin-bottom: 20px;
        }

        .register-btn:hover {
            background: #e01e4f;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(242, 41, 91, 0.3);
        }

        .register-btn:active {
            transform: translateY(0);
        }

        .alert-error {
            background: #fef2f2;
            border: 1px solid #fecaca;
            color: #dc2626;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 24px;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .login-text {
            font-size: 0.9rem;
            color: #6b7280;
            text-align: center;
        }

        .login-link {
            color: #F2295B;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .login-link:hover {
            color: #e01e4f;
            text-decoration: underline;
        }

        /* Mobile responsiveness */
        @media (max-width: 768px) {
            body {
                flex-direction: column;
            }

            .register-section {
                width: 100%;
                padding: 40px 24px;
            }

            .typewriter-section {
                width: 100%;
                height: 200px;
                order: -1;
            }

            .register-container {
                max-width: 100%;
            }
        }

        @media (max-width: 480px) {
            .register-section {
                padding: 32px 20px;
            }

            .register-title {
                font-size: 1.75rem;
            }
        }

        /* Typewriter animation styles */
        .typewriter-text {
            overflow: hidden;
            border-right: .15em solid white;
            white-space: nowrap;
            letter-spacing: .15em;
            animation: typing 3.5s steps(9, end) forwards,
                       blink-caret .75s step-end infinite;
            font-size: 4rem;
            font-weight: bold;
            color: white;
            text-shadow: 2px 2px 8px rgba(0,0,0,0.5);
            display: inline-block;
            text-align: center;
        }

        @keyframes typing {
            from { max-width: 0; }
            to { max-width: 100%; }
        }

        @keyframes blink-caret {
            from, to { border-color: transparent }
            50% { border-color: white }
        }
    </style>
</head>

<body>
    <div class="register-section">
        <div class="register-container">
            <div class="register-header">
                <h1 class="register-title">Register for PrivChat</h1>
                <p class="register-subtitle">Create your account to join the secure chat platform.</p>
            </div>

            {{#if message}}
                <div class="alert-error">
                    <i class="fas fa-exclamation-triangle"></i>
                    {{message}}
                </div>
            {{/if}}

            <form action="/registerdata" method="post">
                <div class="form-group">
                    <label for="fullname" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Enter your full name" required>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>

                <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Create a password" required>
                </div>

                <div class="form-group">
                    <label for="mobileno" class="form-label">Mobile Number</label>
                    <input type="text" class="form-control" id="mobilenumber" name="mobileno" placeholder="Your Mobile Number" required>
                </div>

                <div class="checkbox-group">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="terms" class="checkbox" name="terms" required>
                        <label class="checkbox-label" for="terms">
                            I agree to the <a href="#" class="login-link">Terms & Conditions</a>
                        </label>
                    </div>
                </div>

                <button type="submit" class="register-btn">Register</button>

                <p class="login-text">Already have an account? <a href="/login" class="login-link">Login here</a>.</p>
            </form>
        </div>
    </div>

    <div class="typewriter-section">
        <div class="typewriter-text">PrivChat</div>
    </div>

    <script>
        // Form validation - Basic client-side validation for demonstration
        document.querySelector('form').addEventListener('submit', function(e) {
            const inputs = document.querySelectorAll('.form-control');
            let hasError = false;

            inputs.forEach(input => {
                if (!input.value.trim()) {
                    input.style.borderColor = '#dc2626'; // Red for error
                    setTimeout(() => input.style.borderColor = '#d1d5db', 2000); // Revert
                    hasError = true;
                }
            });

            const termsCheckbox = document.getElementById('terms');
            if (!termsCheckbox.checked) {
                // You might add a visual cue for the checkbox if needed
                console.log('Please agree to the terms and conditions.');
                hasError = true;
            }

            if (hasError) {
                e.preventDefault();
                // Optionally show an error message
                // For this example, we'll just rely on the existing {{message}} or input border change
            }
        });

        // Reset border color on input
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('input', function() {
                this.style.borderColor = '#d1d5db';
            });
        });
    </script>
</body>

</html>
